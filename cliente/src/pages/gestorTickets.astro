---
import Header from "../components/Header.astro";
import "../assets/css/style.css";
import GestorTicketsIsland from "../components/islands/GestorTicketsIsland.jsx";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tori & Roll - Gestor Tickets</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      crossorigin="anonymous"
    />
    <style>
      .auth-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        z-index: 10000;
        justify-content: center;
        align-items: center;
      }

      .auth-modal.active {
        display: flex;
      }

      .auth-modal-content {
        background: white;
        border-radius: 20px;
        padding: 40px;
        max-width: 450px;
        width: 90%;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        text-align: center;
      }

      .auth-modal-content h2 {
        color: #1A1A1A;
        margin-bottom: 20px;
        font-weight: 700;
      }

      .auth-modal-content p {
        color: #353535;
        margin-bottom: 20px;
      }

      .auth-input {
        width: 100%;
        padding: 15px;
        font-size: 1.1em;
        border: 2px solid #D1DEC0;
        border-radius: 20px;
        margin-bottom: 15px;
        box-sizing: border-box;
      }

      .auth-input:focus {
        outline: none;
        border-color: #FF781E;
      }

      .auth-buttons {
        display: flex;
        gap: 10px;
      }

      .auth-submit {
        flex: 1;
        padding: 15px;
        font-size: 1.1em;
        border: none;
        border-radius: 20px;
        background: linear-gradient(90deg, rgba(255, 120, 30, 1) 0%, rgba(255, 225, 31, 1) 100%);
        color: white;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease;
      }

      .auth-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
      }

      .auth-cancel {
        flex: 1;
        padding: 15px;
        font-size: 1.1em;
        border: 2px solid #353535;
        border-radius: 20px;
        background: white;
        color: #353535;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease;
      }

      .auth-cancel:hover {
        border-color: #1A1A1A;
        color: #1A1A1A;
        background: #f5f5f5;
      }

      .auth-error {
        color: #FF4343;
        margin-top: 10px;
        display: none;
        font-weight: 600;
      }

      .auth-error.show {
        display: block;
      }

      .content-wrapper {
        display: none;
      }

      .content-wrapper.unlocked {
        display: block;
      }
    </style>
  </head>

  <body>
    <Header />

    <!-- Modal de autenticaci칩n -->
    <div class="auth-modal active" id="authModal">
      <div class="auth-modal-content">
        <h2>游 Acceso Restringido</h2>
        <p>Esta p치gina requiere autenticaci칩n de camarero</p>
        <input
          type="password"
          class="auth-input"
          id="passwordInput"
          placeholder="Contrase침a de camarero"
        />
        <div class="auth-error" id="errorMessage">Contrase침a incorrecta</div>
        <div class="auth-buttons">
          <button class="auth-cancel" id="btnCancel">Volver</button>
          <button class="auth-submit" id="btnSubmit">Acceder</button>
        </div>
      </div>
    </div>

    <!-- Contenido protegido -->
    <div class="content-wrapper" id="contentWrapper">
      <GestorTicketsIsland client:load />
    </div>

    <script>
      const API_URL = "http://localhost:3000";
      const authModal = document.getElementById("authModal");
      const passwordInput = document.getElementById("passwordInput") as HTMLInputElement;
      const btnCancel = document.getElementById("btnCancel");
      const btnSubmit = document.getElementById("btnSubmit");
      const errorMessage = document.getElementById("errorMessage");
      const contentWrapper = document.getElementById("contentWrapper");

      // Verificar si ya est치 autenticado
      const userRole = sessionStorage.getItem("userRole");
      if (userRole === "camarero") {
        authModal?.classList.remove("active");
        contentWrapper?.classList.add("unlocked");
      }

      // Cancelar y volver a la carta
      btnCancel?.addEventListener("click", () => {
        window.location.href = "/carta";
      });

      // Validar contrase침a
      btnSubmit?.addEventListener("click", validatePassword);
      passwordInput?.addEventListener("keypress", (e) => {
        if (e.key === "Enter") {
          validatePassword();
        }
      });

      async function validatePassword() {
        const password = passwordInput?.value;

        if (!password) {
          errorMessage?.classList.add("show");
          if (errorMessage) errorMessage.textContent = "Por favor, ingrese una contrase침a";
          return;
        }

        try {
          const response = await fetch(`${API_URL}/auth/login`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              nombre_usuario: "camarero",
              contrasena: password,
              rol: "camarero",
            }),
          });

          const data = await response.json();

          if (data.success) {
            // Guardar sesi칩n
            sessionStorage.setItem("userRole", data.usuario.rol);
            sessionStorage.setItem("userId", data.usuario.id);
            sessionStorage.setItem("userName", data.usuario.nombre_usuario);
            
            // Ocultar modal y mostrar contenido
            authModal?.classList.remove("active");
            contentWrapper?.classList.add("unlocked");
          } else {
            // Mostrar error
            errorMessage?.classList.add("show");
            if (errorMessage) errorMessage.textContent = "Contrase침a incorrecta";
            if (passwordInput) passwordInput.value = "";
            passwordInput?.focus();
          }
        } catch (error) {
          console.error("Error:", error);
          errorMessage?.classList.add("show");
          if (errorMessage) errorMessage.textContent = "Error de conexi칩n con el servidor";
          if (passwordInput) passwordInput.value = "";
          passwordInput?.focus();
        }
      }

      // Enfocar el input al cargar
      passwordInput?.focus();
    </script>
  </body>
</html>
