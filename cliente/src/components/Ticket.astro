---
import  TIcketItems from "./TIcketItems.astro";
const { id } = Astro.props;
---

<div class="ticket">
    <h2>Ticket de la mesa <span class="id">{id}</span></h2>
    <div class="ticket-items">
        <table>
            <tr>
                <th>Plato</th>
                <th>Cantidad</th>
            </tr>
            <TIcketItems name="" amount=""></TIcketItems>
        </table>
    </div>
    <div class="ticket-status">
        <select class="estado-selector">
            <option value="wait" data-color="#e31f26">En espera</option>
            <option value="prep" data-color="#f8ed43">En preparaci√≥n</option>
            <option value="end" data-color="#87c540">Terminado</option>
        </select>
    </div>
</div>
